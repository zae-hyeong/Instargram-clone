{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/images/*": [
        "./assets/images/*"
      ]
    },
    "esModuleInterop": true,
    "moduleResolution": "Bundler" // "Node10", "Node16" or "NodeNext"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
